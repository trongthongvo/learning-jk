pipeline {

    //agent none
    agent {label 'slave'}
    
    // environment {
    //   PASS = credentials('registry-pass') 
    //}

    stages {

        stage('Build') {
            //agent {label 'mynode2'}
            steps {
                sh "chmod +x -R ${env.WORKSPACE}"
                sh '''
                    ./pipeline6/java-app/mvn.sh mvn -B -DskipTests clean package
                    ./pipeline6/java-app/build.sh
                '''
            }

            post {
                success {
                   archiveArtifacts artifacts: 'pipeline6/java-app/target/*.jar', fingerprint: true
                }
            }
        }

        stage('Test') {
            //agent {label 'mynode2'}
            steps {
                sh './pipeline6/jenkins/test/mvn.sh mvn test'
            }

            post {
                always {
                    junit 'pipeline6/java-app/target/surefire-reports/*.xml'
                }
            }
        }

        stage('Push') {
            //agent {label 'mynode2'}
            steps {
                sh './pipeline6/jenkins/push/push.sh'
            }
        }

        stage('Deploy') {
            //agent {label 'mynode2'}
            steps {
                sh './pipeline6/jenkins/deploy/deploy.sh'
            }
        }
    }
}
